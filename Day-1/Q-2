/* Write a program to input two numbers and display their sum,
   difference, product, quotient. */
   
   #include <stdio.h>
   int main()
   {
    int num1,num2,sum=0,diff=0,pro=1,div=1;          // Decleration
    printf("Enter 1st number: ");
    scanf("%d",&num1);
    printf("Enter 2nd number: ");
    scanf("%d",&num2);

    sum=num1+num2;                                  // SUM 

    diff=num1-num2;                                 // DIFFERENCE 

    pro=num1*num2;                                  // PRODUCT

    printf("SUM = %d \n",sum);
    printf("DIFFERENCE = %d \n",diff);
    printf("PRODUCT = %d \n",pro);

    if(num2!=0)                                     // QUOTIENT
    {
        div=num1/num2;
        printf("QUOTIENT = %d \n",div);
    }
    else
        printf("Not divisible by 0 \n");
    return 0;
   } 
